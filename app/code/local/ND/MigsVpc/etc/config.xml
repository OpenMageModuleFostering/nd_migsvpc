<config>
    <modules>
        <ND_MigsVpc>
            <version>0.1.1</version>
        </ND_MigsVpc>
    </modules>
    <global>
        <models>
            <migsvpc>
                <class>ND_MigsVpc_Model</class>
            </migsvpc>
        </models>
        <helpers>
            <migsvpc>
                <class>ND_MigsVpc_Helper</class>
            </migsvpc>
        </helpers>
        <resources>
            <migsvpc_setup>
                <setup>
                    <module>ND_MigsVpc</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </migsvpc_setup>
            <migsvpc_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </migsvpc_write>
            <migsvpc_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </migsvpc_read>
        </resources>
        <blocks>
            <migsvpc><class>ND_MigsVpc_Block</class></migsvpc>
        </blocks>        
    </global>
    <frontend>
        <secure_url>
            <migsvpc_server>/migsvpc/server</migsvpc_server>
        </secure_url>
        <secure_url>
            <migsvpc_merchantnew>/migsvpc/merchantnew</migsvpc_merchantnew>
        </secure_url>
        <routers>
            <migsvpc>
                <use>standard</use>
                <args>
                    <module>ND_MigsVpc</module>
                    <frontName>migsvpc</frontName>
                </args>
            </migsvpc>
        </routers>
        <translate>
            <modules>
                <ND_MigsVpc>
                    <files>
                        <default>ND_MigsVpc.csv</default>
                    </files>
                </ND_MigsVpc>
            </modules>
        </translate>
        <layout>
            <updates>
                <migsvpc>
                    <file>migsvpc.xml</file>
                </migsvpc>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <ND_MigsVpc>
                    <files>
                        <default>ND_MigsVpc.csv</default>
                    </files>
                </ND_MigsVpc>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>            
            <migsvpc_server>
                <merchant_id backend_model="adminhtml/system_config_backend_encrypted"/>                
                <model>migsvpc/server</model>
                <title>MigsVpc Server</title>
                <order_status>processing</order_status>
                <allowspecific>0</allowspecific>
            </migsvpc_server>
            <migsvpc_merchant>
                <merchant_id backend_model="adminhtml/system_config_backend_encrypted"/>
                <model>migsvpc/merchant</model>
                <title>MigsVpc 3D-Secure</title>
                <order_status>processing</order_status>
                <allowspecific>0</allowspecific>
            </migsvpc_merchant>
            <migsvpc_merchantnew>
                <merchant_id backend_model="adminhtml/system_config_backend_encrypted"/>
                <model>migsvpc/merchantnew</model>
                <title>MigsVpc 3D-Secure</title>
                <order_status>processing</order_status>
                <allowspecific>0</allowspecific>
            </migsvpc_merchantnew>
        </payment>
    </default>
</config>
